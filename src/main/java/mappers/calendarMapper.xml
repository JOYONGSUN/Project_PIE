<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.or.bit.dao.CalendarDao">

<insert parameterType="CalendarDto" id="insertCalendar">
INSERT INTO calendar_ex
(startdate,enddate,content,allday,eventcolor,title)
VALUES(#{startDate},#{endDate},#{content},#{allDay},#{eventColor},#{title}) 
</insert>

<select id="getCalendarList" resultType="CalendarDto">
SELECT * FROM calendar_ex 
</select>

<update id="editCalendar">
UPDATE calendar_ex
SET startdate=#{param1},enddate = #{param2}
WHERE seq = #{param3} 
</update>

<delete id="deleteCalendar">
DELETE FROM calendar_ex
WHERE seq = #{param1} 
</delete>

<update parameterType="CalendarDto" id="updateCalendar">
UPDATE calendar_ex
SET startdate=#{startDate},enddate = #{endDate},title = #{title},content = #{content}
WHERE seq = #{seq} 
</update>

</mapper>